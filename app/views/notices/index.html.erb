<div class="container section">
  <h1>Admission Notices</h1>

  <div class="admission">
    <h2>The admission forms will be available from 25 oct - 20 november 2018</h2>
  </div>

  <% @notices.each do |notice| %>
  <article>
    <section>
      <h5><%= notice.title %></h5>
      <p><%= notice.details %></p>

      <% if admin? %>
      <div class="float-right">
        <td><strong><%= link_to 'Edit', edit_notice_path(notice) %></strong></td>
        <td><strong><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
      </div>
      <% end %>
    </section>
  </article>
  <% end %>

  <% if admin? %>
  <%= link_to 'New Notice', new_notice_path %>
  <% end %>

</div>

<% if logged_in?%>
  <%= render 'welcome/footer' %>
<% end %>
