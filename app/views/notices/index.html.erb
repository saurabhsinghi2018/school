<div class="container">
  <h1>Admission Notices</h1>

  <div class="admission">
    <h2>The admission forms will be available from 25 oct - 20 november 2018</h2>
  </div>

  <% @notices.each do |notice| %>
  <article>
    <section>
      <h5><%= notice.shortlisting %></h5>
      <p><%= notice.interview %></p>

      <% if admin? %>
      <td><%= link_to 'Show', notice %></td>
      <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
      <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </section>
  </article>
  <% end %>

  <div class="admission">
    <h2>For full details of the admission schedule click below</h2>
    <%= link_to 'Schedule',schedule_path %>
  </div>

  <% if admin? %>
  <%= link_to 'New Notice', new_notice_path %>
  <% end %>

</div>

<%= render 'welcome/footer' %>
