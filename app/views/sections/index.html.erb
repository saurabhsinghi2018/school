<div class="container section">
  <p id="notice"><%= notice %></p>

  <h1>Sections</h1>

  <% if @sections.present? %>
  <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Section</th>
            <% if admin? %>
              <th>All Grades</th>
              <th>Add / Edit Section</th>
              <th>Destroy</th>
            <% end %>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.section %></td>
              <td><strong><%= link_to 'Check All Grades' , section%></strong></td>
              <% if admin? %>
                <td><%= link_to 'Add / Edit Section', edit_section_path(section) %></td>
                <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <%else%>
    <h3 class="details">No Sections Available</h3>
  <% end %>


  <br>
  <% if admin?%>
    <%= link_to 'Add Section', new_section_path,class:'btn btn-primary' %>
  <% end %>
</div>

<%= render 'welcome/footer' %>
