<div class="container section">
  <p id="notice"><%= notice %></p>

  <h1>Sections</h1>

  <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Section</th>
            <th>Add Candidates</th>
            <th>Edit</th>
            <th>Destroy</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.section %></td>
              <td><%= link_to 'Candidates', section %></td>
              <td><%= link_to 'Edit', edit_section_path(section) %></td>
              <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>

  <br>

  <%= link_to 'New Section', new_section_path %>
</div>

<%= render 'welcome/footer' %>
