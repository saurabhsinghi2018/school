          <td>Mt-<%= candidate.id %></td>
          <td><%= candidate.candidate_name %></td>
          <td><%= candidate.appointment_date %></td>
          <td><%= candidate.appointment_time %></td>
          <td><%= candidate.appointment_place %></td>
        <% end %>
