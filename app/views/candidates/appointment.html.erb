        <th>Candidatename</th>
        <th>Appointment date</th>
        <th>Appointment time</th>
        <th>Appointment place</th>

      </tr>

    <% @candidates.each do |candidate| %>
      <tr>
        <% if (candidate.appointment_date and candidate.appointment_time and candidate.appointment_place).present? %>
